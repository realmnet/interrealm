{
  "name": "interrealm",
  "private": true,
  "packageManager": "pnpm@10.17.1",
  "workspaces": [
    "apps/*",
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "db:up": "docker-compose -f docker-compose.dev.yml up -d",
    "db:down": "docker-compose -f docker-compose.dev.yml down",
    "db:reset": "docker-compose -f docker-compose.dev.yml down -v && docker-compose -f docker-compose.dev.yml up -d",
    "db:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
    "dev:full": "pnpm db:up && sleep 5 && turbo run dev",
    "dev:api": "turbo run dev --filter=@interrealm/control-plane",
    "dev:console": "turbo run dev --filter=@interrealm/console"
  },
  "devDependencies": {
    "turbo": "latest",
    "typescript": "^5.3.0",
    "@types/node": "^20.10.0"
  }
}